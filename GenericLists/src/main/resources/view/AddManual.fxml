<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="addManualPane"
            minHeight="0.0" 
            minWidth="0.0" 
            prefHeight="509.0" 
            prefWidth="438.0" 
            xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            fx:controller="mycompany.genericlists.controllers.AddManualController">
    
    <children>

       <CheckBox fx:id="cbManOrdenada" layoutX="14.0" layoutY="25.0" mnemonicParsing="false" text="Ordenada">
          <font>
             <Font size="16.0" />
          </font>

       </CheckBox>

       <Label layoutX="66.0" layoutY="157.0" text="Nome:">

          <font>
             <Font size="16.0" />
          </font>

       </Label>

       <TextField fx:id="tfManNome" layoutX="129.0" layoutY="150.0" prefHeight="23.0" prefWidth="225.0">
          <font>
             <Font size="16.0" />
          </font>

       </TextField>

       <Label layoutX="42.0" layoutY="208.0" text="Matricula:">

          <font>
             <Font size="16.0" />
          </font>

       </Label>

       <TextField fx:id="tfManMatricula" layoutX="129.0" layoutY="206.0" prefHeight="23.0" prefWidth="225.0">

          <font>
             <Font size="16.0" />
          </font>

       </TextField>

       <Button fx:id="btManOK" 
               layoutX="176.0" 
               layoutY="270.0" 
               mnemonicParsing="false" 
               onAction="#onBtManOKClick" 
               prefHeight="36.0" 
               prefWidth="107.0" 
               text="OK">

          <font>
             <Font size="16.0" />
          </font>

       </Button>

       <RadioButton fx:id="rbMan1" layoutX="36.0" layoutY="56.0" mnemonicParsing="false" selected="true" text="Comparar por Matricula">

          <font>
             <Font size="10.0" />
          </font>

          <toggleGroup>
             <ToggleGroup fx:id="tgManOrd" />
          </toggleGroup>

       </RadioButton>

       <RadioButton fx:id="rbMan2" layoutX="36.0" layoutY="74.0" mnemonicParsing="false" text="Comparar por Nome" toggleGroup="$tgManOrd">
          <font>
             <Font size="10.0" />
          </font>

       </RadioButton>

    </children>

 </AnchorPane>
